<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pane" prefHeight="498.0" prefWidth="620.0" style="-fx-background-color: #edebed;" stylesheets="@../Styles.CSS" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.Client.Menus.MenuController.CartMenuController">
   <children>
      <ListView fx:id="itemListView" layoutX="96.0" layoutY="79.0" prefHeight="262.0" prefWidth="429.0" />
      <Button layoutX="201.0" layoutY="341.0" mnemonicParsing="false" onAction="#buy" prefHeight="60.0" prefWidth="220.0" styleClass="myBlueButton" text="Buy" />
      <Button layoutX="30.0" layoutY="103.0" mnemonicParsing="false" onAction="#increaseItem" prefHeight="36.0" prefWidth="53.0" styleClass="myBlueButton" text="+">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button layoutX="30.0" layoutY="256.0" mnemonicParsing="false" onAction="#decreaseItem" prefHeight="48.0" prefWidth="53.0" styleClass="myBlueButton" text="-">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button layoutX="535.0" layoutY="102.0" mnemonicParsing="false" onAction="#showItem" prefHeight="50.0" prefWidth="71.0" styleClass="myBlueButton" text="show Item" />
