         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button layoutY="30.0" onMouseClicked="#back" styleClass="myBlueButton" text="back" />
      <MenuBar prefHeight="30.0" prefWidth="620.0" styleClass="myMenuBar">
        <menus>
          <Menu mnemonicParsing="false" text="Options">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#goToShopMenu" text="ShopMenu" />
              <MenuItem mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>


</AnchorPane>
