<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Menus.MenuController.SellerMenuController.SellerManageProductsMenu">

    <MenuBar layoutY="1.0" prefHeight="25.0" prefWidth="1280.0">
        <menus>
            <Menu mnemonicParsing="false" text="option">
                <MenuItem mnemonicParsing="false" onAction="#addProduct" text="Add Product" />
                <MenuItem mnemonicParsing="false" onAction="#back" text="back" />
                <MenuItem mnemonicParsing="false" onAction="#logout" text="logout" />
            </Menu>
        </menus>
    </MenuBar>
   <Button layoutX="564.0" layoutY="36.0" mnemonicParsing="false" onAction="#addProduct" prefHeight="25.0" prefWidth="101.0" text="Add Product" />
    <ListView fx:id="listView" layoutY="36.0" onMouseClicked="#itemSelect" prefHeight="375.0" prefWidth="502.0" />
    <ChoiceBox fx:id="sortChoiceBox" layoutX="564.0" layoutY="83.0" onAction="#sort" prefHeight="27.0" prefWidth="206.0" />
    <Label layoutX="520.0" layoutY="88.0" text="sort:" />

    <Pane layoutX="520.0" layoutY="125.0" prefHeight="343.0" prefWidth="323.0">
        <CheckBox fx:id="availableCheckBox" layoutX="14.0" layoutY="14.0" onMouseClicked="#filterAvailibility" />
        <Label layoutX="39.0" layoutY="14.0" text="filter availaibility" />


        <CheckBox fx:id="categoryNameCheckBox" layoutX="14.0" layoutY="44.0" onMouseClicked="#filterCategoryName" />
        <Label layoutX="40.0" layoutY="44.0" text="category name:" />
        <TextField fx:id="categoryName" onKeyReleased="#filterCategoryTextChange" layoutX="132.0" layoutY="39.0" />


        <CheckBox fx:id="brandNameCheckBox" layoutX="14.0" layoutY="85.0" onMouseClicked="#filterBrandName" />
        <Label layoutX="55.0" layoutY="85.0" text="brandName:" />
        <TextField fx:id="brandName" onKeyReleased="#filterBrandNameTextChange" layoutX="132.0" layoutY="80.0" />


        <CheckBox fx:id="searchCheckBox" layoutX="14.0" layoutY="130.0" onMouseClicked="#filterSearch" />
        <Label layoutX="82.0" layoutY="130.0" text="search:" />
        <TextField fx:id="search" onKeyReleased="#filterSearchTextChange" layoutX="132.0" layoutY="125.0" />


        <CheckBox fx:id="priceCheckBox" layoutX="14.0" layoutY="176.0" onMouseClicked="#priceFilter" />
        <Label layoutX="87.0" layoutY="176.0" text="price:" />
        <Label layoutX="132.0" layoutY="176.0" prefHeight="17.0" prefWidth="30.0" text="min" />
        <Label layoutX="212.0" layoutY="176.0" text="max" />
        <TextField fx:id="maxPrice" onKeyReleased="#filterPriceTextChange" layoutX="252.0" layoutY="171.0" prefHeight="27.0" prefWidth="40.0" />
        <TextField fx:id="minPrice" onKeyReleased="#filterPriceTextChange" layoutX="162.0" layoutY="171.0" prefHeight="27.0" prefWidth="40.0" />



        <CheckBox fx:id="attributeCheckBox" layoutX="14.0" layoutY="237.0" onMouseClicked="#attributeFilter" />
        <Label layoutX="41.0" layoutY="255.0" text="attribute value:" />
        <Label layoutX="47.0" layoutY="214.0" text="attribute key:" />
        <TextField fx:id="attributeKey" onKeyReleased="#filterAttributeTextChange" layoutX="132.0" layoutY="209.0" />
        <TextField fx:id="attributeValue" onKeyReleased="#filterAttributeTextChange"  layoutX="132.0" layoutY="250.0" />


        <CheckBox fx:id="sellerNameCheckBox" layoutX="14.0" layoutY="309.0" onMouseClicked="#sellerFilter" />
        <Label layoutX="54.0" layoutY="309.0" text="seller name:" />
        <TextField fx:id="sellerName" onKeyReleased="#filterSellerTextChange" layoutX="132.0" layoutY="304.0" />

        <CheckBox fx:id="filterSaleCheckBox" layoutX="138.0" layoutY="14.0" onMouseClicked="#saleFilter" />
        <Label layoutX="175.0" layoutY="14.0" text="filter sale" />
    </Pane>


</AnchorPane>
